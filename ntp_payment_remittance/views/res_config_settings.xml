<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="priority" eval="999" />
            <field name="arch" type="xml">
                <xpath position="inside" expr="//div[@data-key='account']">
                    <h2>Payment Remittance</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-9 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Bank Statement (Show Internal Transfer Button)</span>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Always Show" for="always_show_internal_transfer_button" class="col-lg-2 o_light_label"/>
                                        <field name="always_show_internal_transfer_button" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Show At" for="show_internal_transfer_button_from" class="col-lg-2 o_light_label"/>
                                        <field name="show_internal_transfer_button_from" />
                                    </div>
                                    <div class="row">
                                        <label string="Regex Patterns" for="internal_transfer_patterns" class="col-lg-2 o_light_label"/>
                                        <field name="internal_transfer_patterns" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>