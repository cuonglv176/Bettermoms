<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bank_sms_transaction_view_form" model="ir.ui.view">
        <field name="name">bank.sms.transaction.view.form</field>
        <field name="model">bank.sms.transaction</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button string="Put To Queue" name="button_draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}" />
                    <button string="Skip" name="button_skip" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                    <!-- <button string="Set Draft" name="set_draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}" />
                    <button string="Confirm" name="set_confirm" class="oe_highlight" type="object" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('partner_id', '=', False)]}" />
                    <button string="Find Customer/Vendor" name="find_vendor" class="oe_highlight" type="object" attrs="{'invisible': [('partner_id', '!=', False)]}" /> -->
                    <!-- <button string="Associate Payment" name="sync_payment" class="oe_highlight" type="object" attrs="{'invisible': ['|', '|', ('state', '!=', 'confirm'), ('partner_id', '=', False), ('account_payment_count', '!=', 0)]}" /> -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted" decoration-info="state == 'draft'" decoration-success="state == 'posted'" decoration-danger="state == 'error'"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Skipped" bg_color="bg-muted" attrs="{'invisible': [('state', '!=', 'skip')]}"/>
                    <widget name="web_ribbon" title="Synced" attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                    <div class="oe_title">
                        <span class="o_form_label">
                            <span>Bank Transaction</span>
                        </span>
                    </div>
                    <group>
                        <field name="bank_sms_mail_id" readonly="1" />
                        <field name="bank_sms_id" readonly="1" />
                        <field name="journal_id" readonly="1" />
                    </group>
                    <group>
                        <group>
                            <field name="payment_type" readonly="1" />
                            <field name="amount" readonly="1" />
                            <field name="balance" readonly="1"/>
                            <field name="received_date" readonly="1" />
                            <field name="currency_id" readonly="1" />
                            <field name="message" readonly="1" />
                        </group>
                        <group>
                            <!-- <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}" create="false" /> -->
                        </group>
                    </group>
                    <!-- <notebook>
                        <page name="payment" string="Payments">
                            <field name="account_payment_ids" widget="many2many" domain="[('partner_id', '=', partner_id), ('partner_id', '!=', False), ('payment_type', '=', payment_type)]" />
                            <field name="account_payment_count" invisible="1" />
                        </page>
                    </notebook> -->
                </sheet>
                <div class="o_attachment_preview" />
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="bank_sms_transaction_view_tree" model="ir.ui.view">
        <field name="name">bank.sms.transaction.view.tree</field>
        <field name="model">bank.sms.transaction</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" decoration-muted="state == 'skip'">
                <header>
                    <button string="Put To Queue" name="button_draft" type="object" />
                    <button string="Skip" name="button_skip" type="object" />
                </header>
                <field name="name" decoration-bf="1" />
                <field name="received_date" />
                <field name="bank_sms_id" />
                <field name="journal_id" />
                <field name="payment_type" widget="badge" decoration-success="payment_type == 'inbound'" decoration-warning="payment_type == 'outbound'" />
                <field name="amount" />
                <field name="balance" optional="hide" />
                <field name="message" />
                <!-- <field name="partner_id" /> -->
                <field name="currency_id" optional="hide" />
                <field name="state" widget="badge" decoration-muted="state == 'skip'" decoration-info="state == 'draft'" decoration-success="state == 'posted'" decoration-danger="state == 'error'"/>
            </tree>
        </field>
    </record>

    <record id="bank_sms_transaction_view_search" model="ir.ui.view">
        <field name="name">bank.sms.transaction.view.search</field>
        <field name="model">bank.sms.transaction</field>
        <field name="arch" type="xml">
            <search string="Bank Transaction">
                <field name="name" string="Transaction" filter_domain="['|', ('name', 'ilike', self), ('message', 'ilike', self)]" />
                <field name="journal_id" string="Journal" filter_domain="[('journal_id', 'ilike', self)]" />
                <!-- <field name="name" string="Payment" filter_domain="['|', '|', ('name', 'ilike', self), ('partner_id', 'ilike', self), ('message', 'ilike', self)]" /> -->
                <!-- <field name="partner_id" string="Customer/Vendor" /> -->
                <separator />
                <filter string="Customer Bank Sms Transactions" name="inbound_filter" domain="[('payment_type', '=', 'inbound')]" />
                <filter string="Vendor Bank Sms Transactions" name="outbound_filter" domain="[('payment_type', '=', 'outbound')]" />
                <separator />
                <filter string="In Queue" name="state_draft" domain="[('state', '=', 'draft')]" />
                <filter string="Skip" name="state_skip" domain="[('state', '=', 'skip')]" />
                <filter string="Synced" name="state_sync" domain="[('state', '=', 'posted')]" />
                <filter string="Error" name="state_error" domain="[('state', '=', 'error')]" />

                <group expand='0' string='Group by...'>
                    <filter string='Journal' name="journal_id_group" context="{'group_by': 'journal_id'}"/>
                    <filter string='Payment Type' name="payment_type_group" context="{'group_by': 'payment_type'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_account_bank_transaction_from_customer" model="ir.actions.act_window">
        <field name="name">Bank Sms Transactions</field>
        <field name="res_model">bank.sms.transaction</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'default_payment_type': 'inbound',
            'search_default_inbound_filter': 1,
        }</field>
        <field name="view_id" ref="bank_sms_transaction_view_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Data
            </p>
        </field>
    </record>

    <record id="action_account_bank_transaction_to_seller" model="ir.actions.act_window">
        <field name="name">Bank Sms Transactions</field>
        <field name="res_model">bank.sms.transaction</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'default_payment_type': 'outbound',
            'search_default_outbound_filter': 1,
        }</field>
        <field name="view_id" ref="bank_sms_transaction_view_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Data
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <!-- <menuitem id="menu_action_account_bank_transaction_from_customer" action="action_account_bank_transaction_from_customer" parent="account.menu_finance_receivables" sequence="201" />
    <menuitem id="menu_action_account_bank_transaction_to_seller" action="action_account_bank_transaction_to_seller" parent="account.menu_finance_payables" sequence="201" /> -->
    <menuitem id="bank_transaction_menu" action="bank_sms_transaction_action" name="Bank Sms Transactions" parent="account.account_banks_menu" sequence="202" />

</odoo>