<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================================ -->
        <!-- Settings: Add Marketplace Invoice Collector section           -->
        <!-- ============================================================ -->
        <record id="res_config_settings_view_form_inherit_invoice_collector" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit.invoice.collector</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@data-key='account']" position="inside">
                    <h2>Marketplace Invoice Collector</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-shopping-cart fa-2x text-primary" />
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Grab &amp; Shopee API Configurations</span>
                                <div class="text-muted">
                                    Configure API credentials for Shopee and Grab to enable
                                    automated invoice collection and Bizzi integration.
                                </div>
                                <div class="mt8">
                                    <button name="action_open_collector_configs"
                                            type="object" string="Configure Collectors"
                                            class="btn-link" icon="fa-arrow-right" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-file-text-o fa-2x text-primary" />
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Bizzi Integration</span>
                                <div class="text-muted">
                                    Bizzi API URL and API Key are configured in the
                                    Tax Invoice section above. The invoice collector
                                    reuses those same credentials.
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
