<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================================ -->
        <!-- Collector Config: Form View                                   -->
        <!-- ============================================================ -->
        <record id="view_collector_config_form" model="ir.ui.view">
            <field name="name">ntp.collector.config.form</field>
            <field name="model">ntp.collector.config</field>
            <field name="arch" type="xml">
                <form string="Collector Configuration">
                    <header>
                        <!-- Common: Test Connection -->
                        <button name="action_test_connection" type="object"
                                string="Test Connection" class="btn-secondary"
                                icon="fa-plug" />

                        <!-- Shopee: direct fetch -->
                        <button name="action_fetch_now" type="object"
                                string="Fetch Now" class="btn-primary"
                                icon="fa-download"
                                attrs="{'invisible': [('provider', 'in', ['grab', 'spv', 'shinhan'])]}" />

                        <!-- Grab: Auto Fetch (CAPTCHA solved by AI) -->
                        <button name="action_grab_auto_fetch" type="object"
                                string="⚡ Auto Fetch" class="btn-primary"
                                icon="fa-magic"
                                attrs="{'invisible': [('provider', '!=', 'grab')]}" />

                        <!-- Grab: Manual CAPTCHA flow -->
                        <button name="action_grab_prepare_login" type="object"
                                string="Load CAPTCHA" class="btn-secondary"
                                icon="fa-key"
                                attrs="{'invisible': [('provider', '!=', 'grab')]}" />
                        <button name="action_grab_login_and_fetch" type="object"
                                string="Login &amp; Fetch" class="btn-secondary"
                                icon="fa-sign-in"
                                attrs="{'invisible': [
                                    '|',
                                    ('provider', '!=', 'grab'),
                                    ('grab_login_status', '!=', 'captcha_pending'),
                                ]}" />
                        <button name="action_grab_refresh_captcha" type="object"
                                string="Refresh CAPTCHA" class="btn-link"
                                icon="fa-refresh"
                                attrs="{'invisible': [
                                    '|',
                                    ('provider', '!=', 'grab'),
                                    ('grab_login_status', '!=', 'captcha_pending'),
                                ]}" />

                        <!-- SPV: Auto Fetch -->
                        <button name="action_spv_auto_fetch" type="object"
                                string="⚡ Auto Fetch" class="btn-primary"
                                icon="fa-magic"
                                attrs="{'invisible': [('provider', '!=', 'spv')]}" />

                        <!-- SPV: Manual CAPTCHA flow -->
                        <button name="action_spv_prepare_login" type="object"
                                string="Load CAPTCHA" class="btn-secondary"
                                icon="fa-key"
                                attrs="{'invisible': [('provider', '!=', 'spv')]}" />
                        <button name="action_spv_login_and_fetch" type="object"
                                string="Login &amp; Fetch" class="btn-secondary"
                                icon="fa-sign-in"
                                attrs="{'invisible': [
                                    '|',
                                    ('provider', '!=', 'spv'),
                                    ('spv_login_status', '!=', 'captcha_pending'),
                                ]}" />
                        <button name="action_spv_refresh_captcha" type="object"
                                string="Refresh CAPTCHA" class="btn-link"
                                icon="fa-refresh"
                                attrs="{'invisible': [
                                    '|',
                                    ('provider', '!=', 'spv'),
                                    ('spv_login_status', '!=', 'captcha_pending'),
                                ]}" />

                        <!-- Shinhan: Auto Fetch -->
                        <button name="action_shinhan_auto_fetch" type="object"
                                string="⚡ Auto Fetch" class="btn-primary"
                                icon="fa-magic"
                                attrs="{'invisible': [('provider', '!=', 'shinhan')]}" />

                        <!-- Shinhan: Manual CAPTCHA flow -->
                        <button name="action_shinhan_prepare_login" type="object"
                                string="Load CAPTCHA" class="btn-secondary"
                                icon="fa-key"
                                attrs="{'invisible': [('provider', '!=', 'shinhan')]}" />
                        <button name="action_shinhan_login_and_fetch" type="object"
                                string="Login &amp; Fetch" class="btn-secondary"
                                icon="fa-sign-in"
                                attrs="{'invisible': [
                                    '|',
                                    ('provider', '!=', 'shinhan'),
                                    ('shinhan_login_status', '!=', 'captcha_pending'),
                                ]}" />
                        <button name="action_shinhan_refresh_captcha" type="object"
                                string="Refresh CAPTCHA" class="btn-link"
                                icon="fa-refresh"
                                attrs="{'invisible': [
                                    '|',
                                    ('provider', '!=', 'shinhan'),
                                    ('shinhan_login_status', '!=', 'captcha_pending'),
                                ]}" />
                    </header>
                    <sheet>
                        <!-- Smart Buttons -->
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoices" type="object"
                                    class="oe_stat_button" icon="fa-file-text-o">
                                <field name="invoice_count" widget="statinfo"
                                       string="Invoices" />
                            </button>
                            <button name="action_view_logs" type="object"
                                    class="oe_stat_button" icon="fa-history">
                                <field name="log_count" widget="statinfo"
                                       string="Logs" />
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Configuration Name" />
                            </h1>
                        </div>

                        <!-- ============================================ -->
                        <!-- Common Settings                              -->
                        <!-- ============================================ -->
                        <group>
                            <group string="Provider Settings">
                                <field name="provider" />
                                <field name="is_active" />
                                <field name="sync_interval_hours" />
                                <field name="last_sync_date" readonly="1" />
                            </group>
                            <group string="API Credentials">
                                <!-- Shopee fields -->
                                <field name="api_url"
                                       attrs="{'invisible': [('provider', 'in', ['grab', 'spv', 'shinhan'])]}"
                                       placeholder="https://partner.shopeemobile.com" />
                                <field name="api_key"
                                       attrs="{'invisible': [('provider', 'in', ['grab', 'spv', 'shinhan'])]}"
                                       placeholder="Partner ID / App Key" />
                                <field name="api_secret" password="True"
                                       attrs="{'invisible': [('provider', 'in', ['grab', 'spv', 'shinhan'])]}"
                                       placeholder="Partner Key / Secret" />
                                <field name="shop_id"
                                       attrs="{'invisible': [('provider', 'in', ['grab', 'spv', 'shinhan'])]}"
                                       placeholder="Shop ID" />
                                <field name="access_token" password="True"
                                       attrs="{'invisible': [('provider', 'in', ['grab', 'spv', 'shinhan'])]}"
                                       placeholder="OAuth Access Token" />

                                <!-- Grab fields -->
                                <field name="api_url"
                                       attrs="{'invisible': [('provider', '!=', 'grab')]}"
                                       placeholder="https://vn.einvoice.grab.com (leave blank for default)" />
                                <field name="api_key"
                                       attrs="{'invisible': [('provider', '!=', 'grab')]}"
                                       placeholder="Tài khoản đăng nhập (Username)" />
                                <field name="api_secret" password="True"
                                       attrs="{'invisible': [('provider', '!=', 'grab')]}"
                                       placeholder="Mật khẩu (Password)" />

                                <!-- SPV fields -->
                                <field name="api_url"
                                       attrs="{'invisible': [('provider', '!=', 'spv')]}"
                                       placeholder="https://spv.tracuuhoadon.online (để trống dùng mặc định)" />
                                <field name="api_key"
                                       attrs="{'invisible': [('provider', '!=', 'spv')]}"
                                       placeholder="Mã khách hàng (maKh)" />
                                <field name="api_secret" password="True"
                                       attrs="{'invisible': [('provider', '!=', 'spv')]}"
                                       placeholder="Mật khẩu (Password)" />

                                <!-- Shinhan fields -->
                                <field name="api_url"
                                       attrs="{'invisible': [('provider', '!=', 'shinhan')]}"
                                       placeholder="https://einvoice.shinhan.com.vn (để trống dùng mặc định)" />
                                <field name="api_key"
                                       attrs="{'invisible': [('provider', '!=', 'shinhan')]}"
                                       placeholder="Tên đăng nhập (Username)" />
                                <field name="api_secret" password="True"
                                       attrs="{'invisible': [('provider', '!=', 'shinhan')]}"
                                       placeholder="Mật khẩu (Password)" />
                            </group>
                        </group>

                        <!-- ============================================ -->
                        <!-- Grab Portal: Login &amp; CAPTCHA Section     -->
                        <!-- ============================================ -->
                        <group string="Grab Portal Settings"
                               attrs="{'invisible': [('provider', '!=', 'grab')]}">
                            <group>
                                <field name="grab_login_status" readonly="1"
                                       widget="badge"
                                       decoration-success="grab_login_status == 'logged_in'"
                                       decoration-warning="grab_login_status == 'captcha_pending'"
                                       decoration-danger="grab_login_status in ['error', 'session_expired']"
                                       decoration-info="grab_login_status == 'not_logged_in'" />
                                <field name="grab_session_active" readonly="1"
                                       widget="boolean_toggle" />
                                <field name="grab_date_from"
                                       help="Start date for invoice fetch. Leave blank for auto." />
                            </group>
                            <group>
                                <field name="grab_use_auto_captcha" />
                                <field name="grab_gemini_api_key" password="True"
                                       attrs="{'invisible': [('grab_use_auto_captcha', '=', False)]}"
                                       placeholder="Nhập Google Gemini API Key (bắt buộc cho Auto Fetch)" />
                                <field name="grab_session_valid_until" readonly="1" />
                            </group>
                        </group>

                        <!-- Auto CAPTCHA info banner - Grab (no key) -->
                        <div class="alert alert-warning"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'grab'),
                                 ('grab_use_auto_captcha', '=', False),
                                 ('grab_gemini_api_key', '!=', False),
                             ]}">
                            <i class="fa fa-exclamation-triangle" /> <strong>Cần Nhập Gemini API Key</strong>
                            <p class="mb-0">
                                Để dùng <strong>⚡ Auto Fetch</strong>, hãy nhập <strong>Google Gemini API Key</strong>
                                vào ô bên trên. Lấy key tại:
                                <a href="https://aistudio.google.com/apikey" target="_blank">aistudio.google.com/apikey</a>
                            </p>
                        </div>
                        <!-- Auto CAPTCHA info banner - Grab (key set) -->
                        <div class="alert alert-success"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'grab'),
                                 ('grab_use_auto_captcha', '=', False),
                                 ('grab_gemini_api_key', '=', False),
                             ]}">
                            <i class="fa fa-magic" /> <strong>Auto-CAPTCHA Đã Bật (Google Gemini)</strong>
                            <p class="mb-0">
                                Nhấn <strong>⚡ Auto Fetch</strong> để tự động giải CAPTCHA bằng Gemini,
                                đăng nhập và lấy hóa đơn từ Grab.
                            </p>
                        </div>

                        <!-- Manual CAPTCHA info banner - Grab -->
                        <div class="alert alert-info"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'grab'),
                                 ('grab_login_status', '!=', 'captcha_pending'),
                             ]}">
                            <strong>CAPTCHA Required</strong>
                            <p class="mb-0">
                                Read the code from the image below and enter it
                                in the CAPTCHA Answer field, then click
                                <strong>Login &amp; Fetch</strong>.
                            </p>
                        </div>

                        <!-- CAPTCHA Image + Answer - Grab -->
                        <group attrs="{'invisible': [
                                   '|',
                                   ('provider', '!=', 'grab'),
                                   ('grab_captcha_image', '=', False),
                               ]}">
                            <group string="CAPTCHA Challenge">
                                <field name="grab_captcha_image"
                                       widget="image"
                                       options="{'size': [500, 100]}"
                                       readonly="1"
                                       nolabel="1" />
                            </group>
                            <group string="Your Answer">
                                <field name="grab_captcha_answer"
                                       placeholder="Enter the code shown in the image"
                                       attrs="{'required': [
                                           ('provider', '=', 'grab'),
                                           ('grab_login_status', '=', 'captcha_pending'),
                                       ]}" />
                            </group>
                        </group>

                        <!-- ============================================ -->
                        <!-- SPV Portal: Login &amp; CAPTCHA Section      -->
                        <!-- ============================================ -->
                        <group string="SPV Tracuuhoadon Settings"
                               attrs="{'invisible': [('provider', '!=', 'spv')]}">
                            <group>
                                <field name="spv_login_status" readonly="1"
                                       widget="badge"
                                       decoration-success="spv_login_status == 'logged_in'"
                                       decoration-warning="spv_login_status == 'captcha_pending'"
                                       decoration-danger="spv_login_status in ['error', 'session_expired']"
                                       decoration-info="spv_login_status == 'not_logged_in'" />
                                <field name="spv_session_active" readonly="1"
                                       widget="boolean_toggle" />
                                <field name="spv_date_from"
                                       help="Ngày bắt đầu lấy hóa đơn. Để trống để tự động." />
                            </group>
                            <group>
                                <field name="spv_use_auto_captcha" />
                                <field name="spv_gemini_api_key" password="True"
                                       attrs="{'invisible': [('spv_use_auto_captcha', '=', False)]}"
                                       placeholder="Nhập Google Gemini API Key (bắt buộc cho Auto Fetch)" />
                                <field name="spv_session_valid_until" readonly="1" />
                            </group>
                        </group>

                        <!-- Auto CAPTCHA info banner - SPV -->
                        <div class="alert alert-success"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'spv'),
                                 ('spv_use_auto_captcha', '=', False),
                                 ('spv_gemini_api_key', '!=', False),
                             ]}">
                            <i class="fa fa-exclamation-triangle" /> <strong>Cần Nhập Gemini API Key</strong>
                            <p class="mb-0">
                                Để dùng <strong>⚡ Auto Fetch</strong>, hãy nhập <strong>Google Gemini API Key</strong>
                                vào ô bên trên. Lấy key tại:
                                <a href="https://aistudio.google.com/apikey" target="_blank">aistudio.google.com/apikey</a>
                            </p>
                        </div>
                        <div class="alert alert-success"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'spv'),
                                 ('spv_use_auto_captcha', '=', False),
                                 ('spv_gemini_api_key', '=', False),
                             ]}">
                            <i class="fa fa-magic" /> <strong>Auto-CAPTCHA Đã Bật (Google Gemini)</strong>
                            <p class="mb-0">
                                Nhấn <strong>⚡ Auto Fetch</strong> để tự động giải CAPTCHA bằng Gemini,
                                đăng nhập và lấy hóa đơn từ SPV Tracuuhoadon.
                            </p>
                        </div>

                        <!-- Manual CAPTCHA info banner - SPV -->
                        <div class="alert alert-info"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'spv'),
                                 ('spv_login_status', '!=', 'captcha_pending'),
                             ]}">
                            <strong>Cần Nhập CAPTCHA</strong>
                            <p class="mb-0">
                                Đọc mã từ hình ảnh bên dưới và nhập vào ô CAPTCHA,
                                sau đó nhấn <strong>Login &amp; Fetch</strong>.
                            </p>
                        </div>

                        <!-- CAPTCHA Image + Answer - SPV -->
                        <group attrs="{'invisible': [
                                   '|',
                                   ('provider', '!=', 'spv'),
                                   ('spv_captcha_image', '=', False),
                               ]}">
                            <group string="Hình CAPTCHA">
                                <field name="spv_captcha_image"
                                       widget="image"
                                       options="{'size': [500, 100]}"
                                       readonly="1"
                                       nolabel="1" />
                            </group>
                            <group string="Nhập Mã CAPTCHA">
                                <field name="spv_captcha_answer"
                                       placeholder="Nhập mã hiển thị trong hình"
                                       attrs="{'required': [
                                           ('provider', '=', 'spv'),
                                           ('spv_login_status', '=', 'captcha_pending'),
                                       ]}" />
                            </group>
                        </group>

                        <!-- ============================================ -->
                        <!-- Shinhan Portal: Login &amp; CAPTCHA Section  -->
                        <!-- ============================================ -->
                        <group string="Shinhan Bank eInvoice Settings"
                               attrs="{'invisible': [('provider', '!=', 'shinhan')]}">
                            <group>
                                <field name="shinhan_login_status" readonly="1"
                                       widget="badge"
                                       decoration-success="shinhan_login_status == 'logged_in'"
                                       decoration-warning="shinhan_login_status == 'captcha_pending'"
                                       decoration-danger="shinhan_login_status in ['error', 'session_expired']"
                                       decoration-info="shinhan_login_status == 'not_logged_in'" />
                                <field name="shinhan_session_active" readonly="1"
                                       widget="boolean_toggle" />
                                <field name="shinhan_date_from"
                                       help="Ngày bắt đầu lấy hóa đơn. Để trống để tự động." />
                            </group>
                            <group>
                                <field name="shinhan_use_auto_captcha" />
                                <field name="shinhan_gemini_api_key" password="True"
                                       attrs="{'invisible': [('shinhan_use_auto_captcha', '=', False)]}"
                                       placeholder="Nhập Google Gemini API Key (bắt buộc cho Auto Fetch)" />
                                <field name="shinhan_token_valid_until" readonly="1" />
                            </group>
                        </group>

                        <!-- Auto CAPTCHA info banner - Shinhan (no key) -->
                        <div class="alert alert-warning"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'shinhan'),
                                 ('shinhan_use_auto_captcha', '=', False),
                                 ('shinhan_gemini_api_key', '!=', False),
                             ]}">
                            <i class="fa fa-exclamation-triangle" /> <strong>Cần Nhập Gemini API Key</strong>
                            <p class="mb-0">
                                Để dùng <strong>⚡ Auto Fetch</strong>, hãy nhập <strong>Google Gemini API Key</strong>
                                vào ô bên trên. Lấy key tại:
                                <a href="https://aistudio.google.com/apikey" target="_blank">aistudio.google.com/apikey</a>
                            </p>
                        </div>
                        <!-- Auto CAPTCHA info banner - Shinhan (key set) -->
                        <div class="alert alert-success"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'shinhan'),
                                 ('shinhan_use_auto_captcha', '=', False),
                                 ('shinhan_gemini_api_key', '=', False),
                             ]}">
                            <i class="fa fa-magic" /> <strong>Auto-CAPTCHA Đã Bật (Google Gemini)</strong>
                            <p class="mb-0">
                                Nhấn <strong>⚡ Auto Fetch</strong> để tự động giải CAPTCHA bằng Gemini,
                                đăng nhập bằng JWT và lấy hóa đơn từ Shinhan Bank.
                            </p>
                        </div>

                        <!-- Manual CAPTCHA info banner - Shinhan -->
                        <div class="alert alert-info"
                             attrs="{'invisible': [
                                 '|',
                                 ('provider', '!=', 'shinhan'),
                                 ('shinhan_login_status', '!=', 'captcha_pending'),
                             ]}">
                            <strong>Cần Nhập CAPTCHA</strong>
                            <p class="mb-0">
                                Đọc mã từ hình ảnh bên dưới và nhập vào ô CAPTCHA,
                                sau đó nhấn <strong>Login &amp; Fetch</strong>.
                            </p>
                        </div>

                        <!-- CAPTCHA Image + Answer - Shinhan -->
                        <group attrs="{'invisible': [
                                   '|',
                                   ('provider', '!=', 'shinhan'),
                                   ('shinhan_captcha_image', '=', False),
                               ]}">
                            <group string="Hình CAPTCHA">
                                <field name="shinhan_captcha_image"
                                       widget="image"
                                       options="{'size': [500, 100]}"
                                       readonly="1"
                                       nolabel="1" />
                            </group>
                            <group string="Nhập Mã CAPTCHA">
                                <field name="shinhan_captcha_answer"
                                       placeholder="Nhập mã hiển thị trong hình"
                                       attrs="{'required': [
                                           ('provider', '=', 'shinhan'),
                                           ('shinhan_login_status', '=', 'captcha_pending'),
                                       ]}" />
                            </group>
                        </group>

                        <!-- ============================================ -->
                        <!-- Notes                                        -->
                        <!-- ============================================ -->
                        <group>
                            <field name="notes" placeholder="Additional notes..." />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ============================================================ -->
        <!-- Collector Config: Tree View                                   -->
        <!-- ============================================================ -->
        <record id="view_collector_config_tree" model="ir.ui.view">
            <field name="name">ntp.collector.config.tree</field>
            <field name="model">ntp.collector.config</field>
            <field name="arch" type="xml">
                <tree string="Collector Configurations">
                    <field name="name" />
                    <field name="provider" />
                    <field name="shop_id"
                           attrs="{'invisible': [('provider', 'in', ['grab', 'spv', 'shinhan'])]}" />
                    <field name="is_active" />
                    <field name="last_sync_date" />
                    <!-- Grab login status -->
                    <field name="grab_login_status"
                           attrs="{'invisible': [('provider', '!=', 'grab')]}"
                           widget="badge"
                           decoration-success="grab_login_status == 'logged_in'"
                           decoration-warning="grab_login_status == 'captcha_pending'"
                           decoration-danger="grab_login_status in ['error', 'session_expired']" />
                    <!-- SPV login status -->
                    <field name="spv_login_status"
                           attrs="{'invisible': [('provider', '!=', 'spv')]}"
                           widget="badge"
                           decoration-success="spv_login_status == 'logged_in'"
                           decoration-warning="spv_login_status == 'captcha_pending'"
                           decoration-danger="spv_login_status in ['error', 'session_expired']" />
                    <!-- Shinhan login status -->
                    <field name="shinhan_login_status"
                           attrs="{'invisible': [('provider', '!=', 'shinhan')]}"
                           widget="badge"
                           decoration-success="shinhan_login_status == 'logged_in'"
                           decoration-warning="shinhan_login_status == 'captcha_pending'"
                           decoration-danger="shinhan_login_status in ['error', 'session_expired']" />
                </tree>
            </field>
        </record>

        <!-- ============================================================ -->
        <!-- Collector Config: Action                                      -->
        <!-- ============================================================ -->
        <record id="action_collector_config" model="ir.actions.act_window">
            <field name="name">Collector Configurations</field>
            <field name="res_model">ntp.collector.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure your marketplace API connections
                </p>
                <p>
                    Add credentials to enable automated invoice collection from:
                    Shopee, Grab (vn.einvoice.grab.com),
                    SPV Tracuuhoadon (spv.tracuuhoadon.online),
                    or Shinhan Bank eInvoice (einvoice.shinhan.com.vn).
                    Enable Auto-CAPTCHA with an OpenAI API key to fully automate the process!
                </p>
            </field>
        </record>

    </data>
</odoo>
