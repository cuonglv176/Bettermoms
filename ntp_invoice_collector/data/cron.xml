<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <!-- ============================================================ -->
        <!-- Cron: Fetch Invoices from Marketplace APIs                    -->
        <!-- ============================================================ -->
        <record id="cron_fetch_marketplace_invoices" model="ir.cron">
            <field name="name">Invoice Collector: Fetch from Shopee/Grab</field>
            <field name="model_id" ref="ntp_invoice_collector.model_ntp_collected_invoice" />
            <field name="state">code</field>
            <field name="code">model.cron_fetch_invoices()</field>
            <field name="active" eval="False" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>

        <!-- ============================================================ -->
        <!-- Cron: Push Collected Invoices to Bizzi                        -->
        <!-- ============================================================ -->
        <record id="cron_push_to_bizzi" model="ir.cron">
            <field name="name">Invoice Collector: Push to Bizzi</field>
            <field name="model_id" ref="ntp_invoice_collector.model_ntp_collected_invoice" />
            <field name="state">code</field>
            <field name="code">model.cron_push_to_bizzi()</field>
            <field name="active" eval="False" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>

    </data>

</odoo>
