<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_purchase_order_currency_rate">
        <field name="name">purchase.order.currency.rate</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
<!--                <field name="po_currency_id" invisible="1"/>-->
<!--                <field name="company_currency_id"/>-->
                <field name="currency_flag" invisible="1"/>
                <field name="is_apply_manual" invisible="1"/>
                <field name="default_exchange_rate" attrs="{'invisible': [('currency_flag', '=', False)]}" readonly="1" force_save="1"/>
                <field name="exchange_rate" required="1" attrs="{'invisible': [('currency_flag', '=', False)]}"/>
            </xpath>
<!--            <xpath expr="//field[@name='price_unit']" position="before">-->
<!--                <field name="exchange_rate"/>-->
<!--            </xpath>-->
        </field>
    </record>
</odoo>