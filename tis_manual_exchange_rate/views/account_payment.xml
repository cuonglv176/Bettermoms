<odoo>
        <record model="ir.ui.view" id="view_account_payment_currency_rate">
            <field name="name">account.payment.currency.rate</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='amount_div']" position="after">

                    <field name="default_exchange_rate" attrs="{'invisible': [('default_exchange_rate', '=', False)]}"/>
                    <field name="exchange_rate" attrs="{'invisible': [('exchange_rate', '=', False)]}"/>
                </xpath>


            </field>
        </record>
</odoo>