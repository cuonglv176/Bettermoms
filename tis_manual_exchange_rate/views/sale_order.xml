<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_sale_order_currency_rate">
        <field name="name">sale.order.currency.rate</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='sale_order_template_id']" position="after">

                <field name="currency_flag" invisible="1"/>
                <field name="is_apply_manual" invisible="1"/>
                <field name="default_exchange_rate" attrs="{'invisible': [('currency_flag', '=', False)]}" readonly="1" force_save="1"/>
                <field name="exchange_rate" required="1" attrs="{'invisible': [('currency_flag', '=', False)]}"/>
            </xpath>


        </field>
    </record>
</odoo>