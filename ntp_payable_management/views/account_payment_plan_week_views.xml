<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_payment_lead_plan_search" model="ir.ui.view">
        <field name="name">Plan - Search</field>
        <field name="model">account.payment.plan.week</field>
        <field name="arch" type="xml">
            <search string="Plan Search">
                <field name="name"/>
                <field name="target_date" />
                <field name="target_week" />
                <field name="target_month" />
                <!-- <field name="target_quarter" /> -->
                <field name="target_year" />
                <field name="fold" />
                <!-- <field name="sequence"/> -->
            </search>
        </field>
    </record>

    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="account_payment_plan_tree" model="ir.ui.view">
        <field name="name">account.payment.plan.week.tree</field>
        <field name="model">account.payment.plan.week</field>
        <field name="arch" type="xml">
            <tree string="Plans" multi_edit="1">
                <header>
                    <button string="Toggle Fold" name="button_toogle_fold" type="object" class="oe_highlight" />
                </header>
                <!-- <field name="sequence" widget="handle"/> -->
                <field name="name" readonly="1"/>
                <field name="target_date" readonly="1" />
                <field name="target_week" optional="show" />
                <field name="target_month" optional="show" />
                <!-- <field name="target_quarter" optional="hide" /> -->
                <field name="target_year" optional="hide" />
                <field name="budget_out" />
                <field name="budget_in" />
                <field name="currency_id" invisible="1" />
                <field name="plan_month_id" />
                <field name="fold" />
            </tree>
        </field>
    </record>

    <record id="account_payment_plan_form" model="ir.ui.view">
        <field name="name">account.payment.plan.week.form</field>
        <field name="model">account.payment.plan.week</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Plan">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. To Pay"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="target_date" />
                            <field name="target_week" />
                            <field name="target_month" />
                            <!-- <field name="target_quarter" /> -->
                            <field name="target_year" />
                            <field name="fold"/>
                            <!-- <field name="sequence" readonly="1" /> -->
                        </group>
                        <group>
                            <field name="currency_id" invisible="1" />
                            <field name="plan_month_id" />
                            <field name="budget_out" />
                            <field name="budget_in" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
