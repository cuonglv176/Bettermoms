<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- For Stage Group Payment Kanban -->
    <record id="account_payment_plan_action" model="ir.actions.act_window">
        <field name="name">Payment Planning</field>
        <field name="res_model">account.payment.plan.week</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new planning in your payment management
          </p><p>
            Stages allow adminstrator to easily track how payment
            is categorized
          </p>
        </field>
    </record>

    <menuitem parent="account.root_payment_menu" sequence="200"
              id="menu_action_account_payment_plan_action" 
              action="account_payment_plan_action" 
              groups="account.group_account_manager"/>

    <!-- For Cash Flow Report -->
    <record id="action_account_cash_flow_report" model="ir.actions.client">
        <field name="name">Cash Flow Forcast</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'account.cash.flow.report'}" />
    </record>

    <menuitem id="menu_action_account_cash_flow_report"
              action="action_account_cash_flow_report"
              parent="account_reports.account_reports_audit_reports_menu"
              groups="account.group_account_readonly"/>

</odoo>
