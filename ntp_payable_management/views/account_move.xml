<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_asset_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <field name="draft_payment_show" invisible="1" />
                <button name="button_open_draft_payments" type="object" class="oe_stat_button"
                        icon="fa-list-alt" attrs="{'invisible': [('draft_payment_show', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="draft_payment_count" />
                        </span>
                        <span class="o_stat_text">Draft Payments</span>
                    </div>
                </button>
            </div>
            <xpath expr="//widget[@name='web_ribbon'][last()]" position="after">
                <widget name="web_ribbon" title="Draft Payment" bg_color="bg-info" 
                attrs="{'invisible': ['|', ('draft_payment_show', '=', False), ('payment_state', '!=', 'not_paid')]}"
                tooltip="This entry has been generated through Register Payment button with draft status payment"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_payable_mangement_tree_view" model="ir.ui.view">
        <field name="name">account.out.tax.invoice.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="draft_payment_count" string="# Draft Payment" optional="hide"/>
            </field>
        </field>
    </record>

</odoo>
