<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_plan_update_payment_plan" model="ir.cron">
        <field name="name">Payment Plan: Update Payment Plan</field>
        <field name="model_id" ref="account.model_account_payment" />
        <field name="interval_number">12</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="state">code</field>
        <field name="code">model.task_update_payment_plan()</field>
        <field name="active" eval="False" />
    </record>

    <record id="payment_plan_month_auto_sort" model="ir.cron">
        <field name="name">Payment Plan: Update Payment Auto Sort (Month)</field>
        <field name="model_id" ref="ntp_payable_management.model_account_payment_plan_month" />
        <field name="interval_number">27</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="state">code</field>
        <field name="code">model.auto_sort()</field>
        <field name="active" eval="True" />
    </record>


    <record id="payment_plan_week_auto_sort" model="ir.cron">
        <field name="name">Payment Plan: Update Payment Auto Sort (Week)</field>
        <field name="model_id" ref="ntp_payable_management.model_account_payment_plan_week" />
        <field name="interval_number">11</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="state">code</field>
        <field name="code">model.auto_sort()</field>
        <field name="active" eval="True" />
    </record>

    <record id="payment_plan_month_auto_fold_today" model="ir.cron">
        <field name="name">Payment Plan: Update Payment Auto Fold (Month)</field>
        <field name="model_id" ref="ntp_payable_management.model_account_payment_plan_month" />
        <field name="interval_number">27</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="state">code</field>
        <field name="code">model.auto_fold_today()</field>
        <field name="active" eval="True" />
    </record>

    <record id="payment_plan_week_auto_fold_today" model="ir.cron">
        <field name="name">Payment Plan: Update Payment Auto Fold (Week)</field>
        <field name="model_id" ref="ntp_payable_management.model_account_payment_plan_week" />
        <field name="interval_number">11</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="state">code</field>
        <field name="code">model.auto_fold_today()</field>
        <field name="active" eval="True" />
    </record>

</odoo>