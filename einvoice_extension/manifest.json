{
  "manifest_version": 3,
  "name": "NTP E-Invoice Fetcher",
  "version": "1.0.0",
  "description": "Tự động lấy hóa đơn điện tử từ Grab, Tracuuhoadon, Shinhan và đồng bộ vào Odoo",
  "author": "NTP",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "NTP E-Invoice Fetcher"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://vn.einvoice.grab.com/*",
        "https://spv.tracuuhoadon.online/*",
        "https://einvoice.shinhan.com.vn/*"
      ],
      "js": [
        "src/content/content-bridge.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "https://vn.einvoice.grab.com/*",
    "https://spv.tracuuhoadon.online/*",
    "https://einvoice.shinhan.com.vn/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/*.js",
        "src/utils/*.js"
      ],
      "matches": [
        "https://vn.einvoice.grab.com/*",
        "https://spv.tracuuhoadon.online/*",
        "https://einvoice.shinhan.com.vn/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
