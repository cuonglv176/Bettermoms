<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ============================================================ -->
        <!-- Cron: Tự động đẩy staging Draft sang Bizzi                   -->
        <!-- ============================================================ -->
        <record id="cron_push_draft_staging_to_bizzi" model="ir.cron">
            <field name="name">E-Invoice Bizzi: Tự động đẩy staging sang Bizzi</field>
            <field name="model_id" ref="ntp_einvoice_bizzi.model_invoice_staging_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_push_draft_to_bizzi()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <!-- ============================================================ -->
        <!-- Cron: Poll trạng thái từ Bizzi                               -->
        <!-- ============================================================ -->
        <record id="cron_poll_bizzi_status" model="ir.cron">
            <field name="name">E-Invoice Bizzi: Cập nhật trạng thái từ Bizzi</field>
            <field name="model_id" ref="ntp_einvoice_bizzi.model_invoice_staging_queue"/>
            <field name="state">code</field>
            <field name="code">
# Poll trạng thái cho các bản ghi đã pushed
pushed_records = model.search([('bizzi_status', '=', 'pushed')], limit=50)
connector = env['bizzi.api.connector']
for rec in pushed_records:
    connector.poll_bizzi_status(rec)
            </field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
