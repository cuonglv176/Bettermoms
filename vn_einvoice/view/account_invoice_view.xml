<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vsi_account_invoice_inherit_form_view" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

              <div name="button_box" position="inside">
                <button type="object" class="oe_stat_button" icon="fa-envelope-o" name="action_profile_count">
                    <field name="invoice_viettel_ids" string="HĐ VAT" widget="statinfo"/>
                </button>
              </div>

                <xpath expr="//button[@name='action_post']" position="after">
                     <button name="create_invoice_viettel"  string="Tạo HĐĐT" type="object" class="oe_highlight"/>
                </xpath>
                <field name='partner_id' position="after">
                     <field name="vsi_status" readonly="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
