<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action confirm_payments for multi -->
    <record id="action_account_download_bulk_bank_transfer" model="ir.actions.server">
        <field name="name">Download Transfer Content</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="model_id" ref="account.model_account_payment" />
        <field name="binding_model_id" ref="account.model_account_payment" />
        <field name="binding_view_types">list</field>
        <field name="code">
            action = records.action_download_bulk_bank_transfer()
        </field>
        <field name="sequence">201</field>
    </record>

    <record id="action_account_generate_transfer_content" model="ir.actions.server">
        <field name="name">Generate Transfer Content</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="model_id" ref="account.model_account_payment" />
        <field name="binding_model_id" ref="account.model_account_payment" />
        <field name="binding_view_types">form,list</field>
        <field name="code">
            action = records.action_generate_transfer_content()
        </field>
        <field name="sequence">200</field>
    </record>

    <record id="account_payment_form_inherit_ntp_payment_support" model="ir.ui.view">
        <field name="name">account.payment.view.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <field name="transferred_set" invisible="1" />
                <button string="Set Tranferred" name="button_set_transferred" type="object"
                        attrs="{'invisible': ['|', '|', ('transferred_set', '=', True), ('state', '!=', 'posted'), ('transfer_status', '=', 'reconciled')]}" />
                <button string="Set Tranferring" name="button_unset_transferred" type="object" 
                        attrs="{'invisible': ['|', '|', ('transferred_set', '=', False), ('state', '!=', 'posted'), ('transfer_status', '=', 'reconciled')]}" />
            </xpath>
            <xpath expr="//field[@name='partner_bank_id'][last()]" position="after">
                <field name="transfer_content" attrs="{'invisible': [('state', '=', 'draft')], 'readonly': ['|', '|', ('state', '=', 'draft'), ('payment_type', '=', 'inbound'), ('is_move_sent', '=', True)]}" />
                <field name="transfer_status"/>
                <!-- TODO: stupid to remove this implementation -->
                <field name="puid" attrs="{'invisible': [('state', '=', 'draft')]}" invisible="1" />
            </xpath>
        </field>
    </record>

    <record id="account_payment_tree_inherit_ntp_payment_support" model="ir.ui.view">
        <field name="name">account.payment.view.tree.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_supplier_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/header" position="inside">
                <button string="Set Tranferred" name="button_set_transferred" type="object" />
                <button string="Set Tranferring" name="button_unset_transferred" type="object" />
            </xpath>
            <xpath expr="//field[@name='batch_payment_id']" position="after">
                <field name="transfer_content" attrs="{'readonly': ['|', '|', ('state', '=', 'draft'), ('payment_type', '=', 'inbound'), ('is_move_sent', '=', True)]}" optional="hide" />
                <field name="transfer_status" widget="badge"
                        decoration-warning="transfer_status == 'transferring'"
                        decoration-success="transfer_status == 'transferred'" 
                        decoration-primary="transfer_status == 'reconciled'" optional="hide" />
                <field name="is_move_sent" optional="hide" />
                <field name="payment_type" invisible="1" />
                <!-- TODO: stupid to remove this implementation -->
                <field name="puid" optional="hide" invisible="1" />
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_search_inherit_ntp_pm" model="ir.ui.view">
        <field name="name">account.payment.view.search.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[last()]" position="after">
                <separator />
                <filter name="transfer_prepare" string="Transfer Prepare" domain="[('transfer_status', '=', 'prepare')]" />
                <filter name="transfer_ing" string="Transfering" domain="[('transfer_status', '=', 'transferring')]" />
                <filter name="transfer_ed" string="Transferred" domain="[('transfer_status', '=', 'transferred')]" />
                <filter name="transfer_reconciled" string="Reconciled" domain="[('transfer_status', '=', 'reconciled')]" />
            </xpath>
        </field>
    </record>

</odoo>