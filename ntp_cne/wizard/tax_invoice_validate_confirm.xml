<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tax_invoice_validate_confirm_view_form" model="ir.ui.view">
        <field name="name">tax.invoice.validate.confirm.view.form</field>
        <field name="model">tax.invoice.validate.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirm Vendor Bill / Purchase Receipt">
                <p class="oe_grey">
                    Are you sure this Tax Invoice is valid and link to below Vendor Bill/PR ?
                </p>
                <group>
                    <group string="General Info" colspan="2">
                        <field name="account_move_ids" widget="many2many_tags" readonly="1" />
                        <field name="currency_id" readonly="1" />
                    </group>
                    <group string="Differences" colspan="2">
                        <field name="difference_amount_without_vat" readonly="1" string="# Amount (Exc. VAT)" decoration-danger="difference_amount_without_vat != 0"  />
                        <field name="difference_amount_with_vat" readonly="1" string="# Amount (Inc. VAT)" decoration-danger="difference_amount_with_vat != 0" />
                    </group>
                    <group string="Vendor Bill/PR">
                        <field name="account_move_amount_untaxed" string="Untaxed Amount" readonly="1" />
                        <field name="account_move_amount_total" string="Taxed Amount" readonly="1" />
                    </group>
                    <group string="Tax Invoice">
                        <field name="total_amount_without_vat" string="Untaxed Amount" readonly="1" />
                        <field name="total_amount_with_vat" string="Taxed Amount" readonly="1" />
                    </group>
                </group>
                <footer>
                    <button name="button_set_validated" string="Validate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_tax_invoice_validate_confirm" model="ir.actions.act_window">
        <field name="name">Tax Invoice Confirm</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tax.invoice.validate.confirm</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- TODO: check if we need this -->
        <field name="binding_model_id" ref="ntp_cne.model_tax_invoice" />
        <field name="binding_view_types">list</field>
    </record>

</odoo>