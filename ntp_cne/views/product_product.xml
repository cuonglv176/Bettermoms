<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_normal_form_view_ntp_pr" model="ir.ui.view">
        <field name="name">product.product.form.ntp.pr</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="inside">
                <group>
                    <group string="Product Label Matching In Invoice">
                        <field name="product_label_in_tax_invoice_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="pattern" />
                                <field name="match_rule" />
                                <field name="priority" optional="hide" />
                                <field name="status" optional="hide" />
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>