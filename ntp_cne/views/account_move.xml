<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.tax.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="is_product_missing" invisible="1" />
                    <button string="Fillup Product" name="button_find_product_from_label"
                            type="object" attrs="{'invisible': ['|', ('is_product_missing', '=', False), ('move_type', 'not in', ('in_invoice', 'in_receipt', 'in_refund'))]}"/>
                </xpath>
                <div class="oe_button_box" name="button_box" position="inside">
                    <button name="action_open_tax_invoice"
                            type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                            attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_receipt', 'in_refund'))]}"
                            >
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <!-- <field name="seller_tax_invoices" string="" widget="statinfo" /> -->
                                <field name="tax_invoices_count" string="" widget="statinfo" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">Tax Invoices</span>
                        </div>
                    </button>
                </div>

                <xpath expr="//page[@id='aml_tab']" position="after">
                    <page name="tax.invoice" string="Tax Invoices">
                        <field name="tax_invoice_ids"
                               options="{'no_create': True, 'no_create_edit': True}" widget='many2many'
                               domain="[('vendor_id', '=', partner_id), ('account_move_id', '=', False)]"
                               >
                            <tree>
                                <field name="name"></field>
                                <field name="invoice_name"></field>
                                <field name="issued_date" optional="hide" widget="date" />
                                <field name="signed_date" optional="hide" widget="date" />
                                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'validated'"></field>
                                <field name="total_amount_without_vat"></field>
                                <field name="vat_percent"></field>
                                <field name="total_vat_amount"></field>
                                <field name="total_amount_with_vat"></field>
                            </tree>
                        </field>

                    </page>
                </xpath>
            </field>
        </record>

        <!-- extend Bills treeview to show the tax_invoice count -->
        <record id="account_move_tax_invoice_tree_view" model="ir.ui.view">
            <field name="name">account.out.tax.invoice.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="tax_invoices_count" string="# Tax Invoices" optional="hide"/>
                    <field name="tax_invoice_ids" widget="many2many_tags" string="Tax Invoices" optional="hide"/>
                </field>
                <field name="date" position="after">
                    <field name="issue_date_tax_invoice" optional="show" invisible="context.get('default_move_type') not in ('in_invoice', 'in_receipt', 'in_refund')" />
                </field>
            </field>
        </record>

        <record id="account_move_tax_invoice_form_view" model="ir.ui.view">
            <field name="name">account.out.tax.invoice.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="is_locked" string="Locked" widget="boolean_toggle" optional="hide" />
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="issue_date_tax_invoice" />
                </xpath>
            </field>
        </record>

    </data>


</odoo>