<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tax_invoice_res_company_form_inherit" model="ir.ui.view">
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="after">
                    <page name="name" string="Catchup and Cashup">
                        <group string="Tax Invoice Integration">
                            <group>
                                <field name="tax_invoice_integration" string="Enable Hook"></field>
                            </group>
                            <group attrs="{'invisible': [('tax_invoice_integration', '=', False)]}">
                                <field name="odoo_url"></field>
                                <field name="tax_invoice_hook_id" string="Hook Id"></field>
                                <field name="tax_invoice_hook_secret" string="Hook Secret"></field>
                                <field name="tax_invoice_webhook_url"></field>
                                <field name="tax_invoice_last_succeeded_update" readonly="1" string="Last Succeeded Update"></field>
                            </group>
                            <group attrs="{'invisible': [('tax_invoice_integration', '=', False)]}">
                                <div style="padding-top: 0.5em;">
                                    <button string="Update Webhook" type="object" class="oe_highlight" name="action_update_tax_invoice_webhook" style="margin-right: 1em;" />
                                    <!-- FIXME: need to support this -->
                                    <!-- <button string="Get Status" type="object" class="oe_highlight" name="action_get_tax_invoice_webhook_status" /> -->
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>