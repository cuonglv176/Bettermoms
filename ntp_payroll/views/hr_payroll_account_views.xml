    <!-- Modify Payslip Run Form -->

        <record id="ntp_hr_payslip_run_view_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.inherit.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_payslips']" position="before">
                    <button name="action_open_payments" class="oe_stat_button" icon="fa-money" type="object" help="Generated Payments" attrs="{'invisible': [('payment_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="payment_count"/></span>
                            <span class="o_stat_text">Payments</span>
                         </div>
                    </button>
                </xpath>
                <xpath expr="//button[@name='action_validate']" position="after">
                    <button name="action_open_create_payment_form" type="object" string="Create Payment Employee" states="verify,close" class="oe_highlight"/>
                    <button name="action_create_vendor_bill" type="object" string="Create Vendor Bill"   class="oe_highlight"/>
                    <button name="action_create_vendor_payment" type="object" string="Create Vendor Payment"   class="oe_highlight"/>
                    <field name="payment_count" invisible="1"/>
                </xpath>
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Journal Entries">
                            <field name="move_ids" readonly="1"/>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>


    <!-- Adding Account fields to the Salary Rules -->

        <record id="ntp_hr_salary_rule_view_form" model="ir.ui.view">
            <field name="name">hr.salary.rule.form.inherit</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll_account.hr_salary_rule_view_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="replace"/>
                <field name="analytic_account_id" position="after">
                    <field name="partner_id"/>
                </field>

            </field>
        </record>



</odoo>
