<odoo>
    <data>
      <record id="is_payslip_payment_manager_rule" model="ir.rule">
        <field name="name">Payslip payment: manager rule</field>
        <field name="model_id" ref="model_account_payment"/>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
      </record>

      <record id="is_payslip_payment_billing_rule" model="ir.rule">
        <field name="name">Payslip payment: billing rule</field>
        <field name="model_id" ref="model_account_payment"/>
        <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="domain_force">[('is_payslip', '=', False)]</field>
      </record>
    </data>
</odoo>