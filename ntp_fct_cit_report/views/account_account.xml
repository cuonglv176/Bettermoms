<odoo>
    <record id="view_account_form" model="ir.ui.view">
        <field name="name">account.account.reports.form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="cit_vat" />
                <field name="fct_vat" />
            </field>
        </field>
    </record>

    <record id="view_account_tag_form" model="ir.ui.view">
        <field name="name">account.account.reports.form</field>
        <field name="model">account.account.tag</field>
        <field name="inherit_id" ref="account.account_tag_view_form"/>
        <field name="arch" type="xml">
            <field name="tax_negate" position="before">
                <field name="tax_type" attrs="{'invisible': [('applicability', '!=', 'taxes')]}"/>
            </field>
        </field>
    </record>
</odoo>