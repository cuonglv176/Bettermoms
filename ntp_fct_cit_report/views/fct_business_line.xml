<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_inherit_fct_code" model="ir.ui.view">
            <field name="name">product.template.form.inherit.web.fct</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='payables']" position="inside">
                    <field name="fct_business"/>
                </xpath>
            </field>
        </record>
        <record id="fct_business_line_tree_view" model="ir.ui.view">
            <field name="name">fct.business.line.tree.view</field>
            <field name="model">fct.business.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="fct_business_line_action" model="ir.actions.act_window">
            <field name="name">FCT Business Lines</field>
            <field name="res_model">fct.business.line</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="fct_business_line_menu"
                  action="fct_business_line_action"
                  name="FCT Business Lines"
                  parent="account.account_account_menu"/>
    </data>
</odoo>