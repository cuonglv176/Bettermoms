<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ks_view_warehouse_valuation_form" model="ir.ui.view">
        <field name="name">ks.warehouse.report.valuation.form</field>
        <field name="model">ks.warehouse.report.valuation</field>
        <field name="arch" type="xml">
            <form>
                <h2><field name="ks_name"/></h2>
                <group>
                    <group>
                        <field name="ks_date_from"/>
                        <field name="ks_date_to"/>
                    </group>
                    <group>
<!--                        <field name="location_id"/>-->
<!--                        <field name="warehouse_id"/>-->
                        <field name="ks_inventory_loss" widget="boolean_toggle"/>
                        <field name="ks_company_id"/>
                    </group>
                </group>
                <group string="Filters">
                    <field name="ks_show_exhausted"/>
                    <field name="ks_show_opening"/>
                    <field name="ks_show_closing"/>
                    <field name="ks_show_adjustment"/>
                    <field name="ks_show_scrap_loss"/>
                    <field name="ks_show_current"/>
                </group>
                <footer>
<!--                    <button name="ks_action_generate_report" string="Generate Report" type="object" class="btn-primary" />-->
                    <button name="ks_generate_xlsx_report" string="Generate XLSX" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="ks_action_warehouse_report_valuation" model="ir.actions.act_window">
        <field name="name">Valuation Report</field>
        <field name="res_model">ks.warehouse.report.valuation</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--Add menu-->
    <menuitem
            parent="ks_warehouse_report.ks_menu_warehouse_reporting_main"
            id="ks_menu_warehouse_report_valuation"
            action="ks_action_warehouse_report_valuation"
            name="Valuation Report"/>

    <record id="ks_action_warehouse_report_valuation_action" model="ir.actions.report">
            <field name="name">Warehouse Valuation</field>
            <field name="model">ks.warehouse.report.valuation</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">ks_warehouse_report.ks_action_warehouse_report_valuation</field>
            <field name="report_file">ks_warehouse_report.ks_action_warehouse_report_valuation</field>
            <field name="binding_type">report</field>
        </record>
</odoo>