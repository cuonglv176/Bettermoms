<odoo>
    <data>
        <record id="view_tax_type_tree" model="ir.ui.view">
            <field name="name">vat.type.tree</field>
            <field name="model">vat.type</field>
            <field name="arch" type="xml">
                <tree string="Account Tax Type" editable="bottom" >
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_tax_type" model="ir.actions.act_window">
            <field name="name">VAT Type</field>
            <field name="res_model">vat.type</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tax_type_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new tax type
              </p>
            </field>
        </record>

            <menuitem id="action_tax_type_menu"
              action="action_tax_type"
              name="VAT Type"
              parent="account.account_account_menu"
              sequence="3"/>
    </data>
</odoo>