<odoo>
    <data>
        <record id="company_short_name_tree_view" model="ir.ui.view">
            <field name="name">company.short.name.tree.view</field>
            <field name="model">company.short.name</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="company_short_name_action" model="ir.actions.act_window">
            <field name="name">Company Short Name</field>
            <field name="res_model">company.short.name</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="company_short_name_menu"
                  action="company_short_name_action"
                  sequence="4"
                  parent="contacts.res_partner_menu_config"/>
    </data>
</odoo>