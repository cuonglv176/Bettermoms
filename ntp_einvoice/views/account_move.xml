<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_asset_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="button_open_einvoices" type="object" class="oe_stat_button"
                        icon="fa-list-alt" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="einvoice_ids_count" />
                        </span>
                        <span class="o_stat_text">EInvoices</span>
                    </div>
                </button>
            </div>
            <xpath expr="//header" position="inside">
                <button name="button_open_einvoice_create_wizard" type="object" string="Create EInvoice"
                        attrs="{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('state', '=', 'draft')]}" />
            </xpath>

            <xpath expr="//field[@name='payment_reference']" position="before">
                <field name="einvoice_ids" widget="many2many_tags"
                       attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"
                       options="{'no_create': True, 'no_create_edit': True}" />
            </xpath>

        </field>
    </record>

    <record id="view_out_invoice_tree_inherit_ntp_einvoice" model="ir.ui.view">
        <field name="name">account.move.view.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='to_check']" position="after">
                <field name="einvoice_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>

</odoo>