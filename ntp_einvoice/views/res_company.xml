<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_einvoice_res_company_form_inherit" model="ir.ui.view">
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="after">
                    <page name="name" string="EInvoice Templates">
                        <group string="Invoice General Info">
                            <field name="einvoice_legal_name" />
                            <field name="einvoice_address" />
                            <field name="einvoice_email" />
                            <field name="einvoice_phone_number" />
                            <field name="einvoice_website" />
                            <field name="einvoice_bank" />
                            <field name="einvoice_bank_account" />
                        </group>
                        <group string="Invoice Template Config">
                            <field name="einvoice_template_ids" nolabel="1">
                                <tree>
                                    <button icon="fa-exchange" string="Sync" name="button_sync" type="object"
                                            attrs="{'invisible': [('is_active', '=', False)]}" />
                                    <field name="name" />
                                    <field name="provider" />
                                    <field name="code" optional="hide" />
                                    <field name="api_domain" optional="hide" />
                                    <field name="api_username" optional="hide" />
                                    <field name="api_password" optional="hide" />
                                    <field name="tax_code" />
                                    <field name="invoice_type" optional="hide" />
                                    <field name="invoice_template" />
                                    <field name="invoice_template_type" optional="hide" />
                                    <field name="invoice_series" />
                                    <field name="is_active" />
                                    <field name="is_default" />
                                    <field name="last_synced" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
