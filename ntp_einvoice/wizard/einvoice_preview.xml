<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ntp_einvoice_preview_view_form" model="ir.ui.view">
        <field name="name">ntp.einvoice.preview.view.form</field>
        <field name="model">ntp.einvoice.preview</field>
        <field name="arch" type="xml">
            <form string="">
                
                <sheet>
                    <group>
                        <field name="einvoice_id" readonly="1"/>
                        <field name="einvoice_template_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page name="preview" string="Preview" attrs="{'invisible': [('x_provider_preview', '=', False)]}">
                            <field name="x_provider_preview" readonly="1" widget="pdf_viewer" />
                        </page>
                    </notebook>
                    <footer>
                        <button string="Refresh" name="button_preview" icon="fa-refresh" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
               
                <!-- 
                <sheet>
                    <group attrs="{'invisible': [('x_provider_preview', '=', False)]}">
                        <field name="x_provider_preview" readonly="1" widget="pdf_viewer" nolabel="1" />
                    </group>
                    <footer>
                        <button string="Preview" name="button_preview" icon="fa-refresh" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
                -->
            </form>
        </field>
    </record>

</odoo>
