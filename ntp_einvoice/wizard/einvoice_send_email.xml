<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ntp_einvoice_send_email_form" model="ir.ui.view">
        <field name="name">ntp.einvoice.send.email.form</field>
        <field name="model">ntp.einvoice.send.email</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="einvoice_id" readonly="1"/>
                        <field name="partner_id" invisible="1" />
                        <field name="invoice_address" />
                        <field name="email_address" string="To Address" />
                        <field name="cc_email_address" string="Cc Address" />
                    </group>
                    <footer>
                        <button string="Send Email" name="button_send_email" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
