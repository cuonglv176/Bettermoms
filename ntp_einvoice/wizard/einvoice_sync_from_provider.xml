<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ntp_einvoice_sync_from_provider_view_form" model="ir.ui.view">
        <field name="name">ntp.einvoice.sync.from.provider.view.form</field>
        <field name="model">ntp.einvoice.sync.from.provider</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="update_provider_einvoice_status" widget="boolean_toggle"  />
                        <field name="update_payment_status" widget="boolean_toggle"  />
                        <field name="update_attachment_data" widget="radio"  />
                        <field name="update_detail_from_xml" />
                        <field name="force_recreate_lines" attrs="{'invisible': [('update_detail_from_xml', '=', False)]}" />
                    </group>
                    <footer>
                        <button string="Update" name="button_perform_update" type="object" class="oe_highlight" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>