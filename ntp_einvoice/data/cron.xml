<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="auto_download_invoice_attachments" model="ir.cron">
            <field name="name">Einvoice: Download Invoice Attachments</field>
            <field name="model_id" ref="ntp_einvoice.model_ntp_einvoice"/>
            <field name="state">code</field>
            <field name="code">model.task_download_missing_attachments()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="auto_get_einvoices" model="ir.cron">
            <field name="name">Einvoice: Sync Invoice From Provider</field>
            <field name="model_id" ref="ntp_einvoice.model_ntp_einvoice_template"/>
            <field name="state">code</field>
            <field name="code">model.task_sync_einvoice_from_provider()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">12</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="auto_update_einvoices_info" model="ir.cron">
            <field name="name">Einvoice: Update Invoice From Xml </field>
            <field name="model_id" ref="ntp_einvoice.model_ntp_einvoice"/>
            <field name="state">code</field>
            <field name="code">model.task_sync_einvoice_info()</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">3</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

    </data>

</odoo>
