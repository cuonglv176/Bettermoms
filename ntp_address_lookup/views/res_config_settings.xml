<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_address_lookup" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.address.lookup</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="priority" eval="999" />
            <field name="arch" type="xml">
                <xpath position="inside"
                       expr="//div[@data-key='account']">
                    <h2>Address Lookup</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-9 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="address_lookup_online_search" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="address_lookup_online_search" />
                                <div class="text-muted">
                                    Enable online address search via provinces.open-api.vn (free, no API key needed).
                                    Address data (Province/District/Ward) is already loaded offline.
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
